# Maintainer: u8sand <u8sand@gmail.com>
pkgname=kuro-player
pkgver=2.0.2
pkgrel=1
pkgdesc="Kuro Player is a free and open source, cross-platform, libmpv based multimedia player."
url="http://kuro-player.u8sand.net/"
arch=('x86_64' 'i686')
license=('GPLv2')
depends=('mpv' 'qt5-base' 'qt5-declarative' 'qt5-svg' 'qt5-x11extras')
makedepends=('git' 'make' 'pkg-config' 'qt5-tools')
optdepends=(
  'qt5-translations: qt5 dialog translations'
  'mpv-git: bleeding-edge mpv features'
  'youtube-dl: support for remote video streaming'
)
conflicts=('kuro-player' 'kuro-player')
provides=('kuro-player')

_gitroot="https://github.com/u8sand/Kuro-Player.git"
_gitname="release"

build() {
  cd "$srcdir"
  git clone ${_gitroot} -b ${_gitname} ${pkgname}
  cd "$pkgname"
  ./configure INSTROOT="$pkgdir" CONFIG+=install_translations
  make -j `grep -c ^processor /proc/cpuinfo`
}

package() {
  cd "$srcdir/$pkgname"
  make install
}
